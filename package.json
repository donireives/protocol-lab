{
  "name": "protocol-lab",
  "version": "1.0.0",
  "description": "Playground for experimenting with network communication protocols via lightweight TypeScript demos.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "mcp:dev": "ts-node-dev --respawn --transpile-only src/mcp/stdioServer.ts",
    "mcp": "node dist/mcp/stdioServer.js"
  },
  "keywords": [
    "typescript",
    "express",
    "http",
    "playground"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "graphql": "^16.12.0",
    "graphql-http": "^1.22.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
